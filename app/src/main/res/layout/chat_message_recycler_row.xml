<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="@dimen/_10sp">

    <RelativeLayout
        android:id="@+id/left_chat_relativelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/_80pxh"
        android:background="@drawable/rectangle_bg_white_a700_border_black_900_radius_18">

        <com.vanniktech.emoji.EmojiTextView
            android:id="@+id/left_chat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/_100pxh"
            android:padding="@dimen/_10sp"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sp"
            tools:text="Coucou" />

        <TextView
            android:id="@+id/date_left_textview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_22sp"
            android:layout_gravity="end|bottom"
            android:layout_alignEnd="@id/left_chat_textview"
            android:layout_below="@id/left_chat_textview"
            android:layout_marginEnd="@dimen/_15sp"
            android:textAlignment="textEnd"
            android:text="17:11"
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_chat_relativelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_80pxh"
        android:background="@drawable/rectangle_bg_black_border_white">

        <com.vanniktech.emoji.EmojiTextView
            android:id="@+id/right_chat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/_100pxh"
            android:padding="@dimen/_10sp"
            android:text="Coucou"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sp" />

        <TextView
            android:id="@+id/date_right_textview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_22sp"
            android:layout_gravity="end|bottom"
            android:layout_alignEnd="@id/right_chat_textview"
            android:layout_below="@id/right_chat_textview"
            android:layout_marginEnd="@dimen/_15sp"
            android:textAlignment="textEnd"
            android:text="17:11"
            android:textColor="@color/white" />
    </RelativeLayout>
</RelativeLayout>